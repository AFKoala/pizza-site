<html>
    <link rel ="stylesheet" href ="css/style.css">

    <div id="confirmPage">
        <p><h1>Are these suitable to your human tastebuds?</h1></p>
        <form method="post" action='/confirm'>
            <% pizSize.each do |pizSize_value| %>
                <p> <%= pizSize_value %>
                <input type = "radio" name = "good[<%= pizSize_value %>]" value = "<%= pizSize_value %>" checked> Yes
                <input type = "radio" name = "good[<%= pizSize_value %>]" value = "no"> No </p>
            <% end %> 

            <% crustType.each do |crustType_value| %>
                <p> <%= crustType_value %>
                <input type = "radio" name = "good[<%= crustType_value %>]" value = "<%= crustType_value %>" checked> Yes
                <input type = "radio" name = "good[<%= crustType_value %>]" value = "no"> No </p>
            <% end %> 

            <% sauces.each do |sauce_value| %>
                <%if sauce_value == "None"%>
                    <p> No Sauce
                    <input type = "radio" name = "confirmed[<%= sauce_value %>]" value = "No Sauce" checked> Yes
                    <input type = "radio" name = "confirmed[<%= sauce_value %>]" value = "no"> No </p>
                <%else%>
                    <p> <%= sauce_value %>
                    <img src = "img/<%=sauce_value%>.jpg" height="35" width="35">
                    <input type = "radio" name = "confirmed[<%= sauce_value %>]" value = "<%= sauce_value %>" checked> Yes
                    <input type = "radio" name = "confirmed[<%= sauce_value %>]" value = "no"> No </p>
                <% end %> 
            <%end%>

            <% cheese.each do |cheese_value| %>
                <%if cheese_value == "None"%>
