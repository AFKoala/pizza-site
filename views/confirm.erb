<html>

    <link rel ="stylesheet" href ="css/style.css">

    <div id="confirmPage">
        <p>Check options to confirm.</p>
        <form method="post" action='/confirm'>
            <%price = 0%>
            <p><input type="checkbox" name="confirmed_size[]" value="<%=pizSize%>"><%=pizSize.join%></p>
                <%if pizSize == "Small"%>
                    <%price += 6%>
                <%elsif pizSize == "Medium"%>
                    <%price += 9%>
                <%elsif pizSize == "Large"%>
                    <%price += 12%>
                <%elsif pizSize == "X-Large"%>
                    <%price += 15%>
                <%end%>
            <p><input type="checkbox" name="confirmed_crust[]" value="<%=crustType%>"><%=crustType.join%> Crust</p>
            <p><input type="checkbox" name="confirmed_sauce[]" value="<%=sauces%>"><%=sauces.join%> Sauce</p>
                <%if sauces == "Marinara"%>
                    <img src="img/marinara.jpg" height="35" width="35">
                <%elsif sauces == "BBQ"%>
                    <img src="img/bbq.jpeg" height="35" width="35">
                <%elsif sauces == "Tapenade"%>
                    <img src="img/tapenade.jpg" height="35" width="35">
                <%elsif sauces == "Pumpkin"%>
                    <img src="img/pumpkin.jpg" height="35" width="35">
                <%end%>
            <%cheese.each do |value|%>
                <p><input type="checkbox" name="confirmed_cheese[]" value="<%=value%>"><%=value%> Cheese</p>
                <label for="mozz"><img src="img/mozza_cheese.jpg" height="35" width="35"></label>
                <label for="prov"><img src="img/provolone.jpg" height="35" width="35"></label>
                <label for="ched"><img src="img/cheddar.jpg" height="35" width="35"></label>
                <label for="swiss"><img src="img/swiss.jpg" height="35" width="35"></label>
                    <%if cheese == "none"%>
                
                    <%else%>
                        <%price += 0.35%>
                    <%end%>
            <%end%>
            <%meat.each do |value|%>
                <p><input type="checkbox" name="confirmed_meat[]" value="<%=value%>"><%=value%></p>
                <label for="pepperoni"><img src="img/pepperoni.jpg" height="35" width="35"></label>
                <label for="beef"><img src="img/beef.jpg" height="35" width="35"></label>
                <label for="bacon"><img src="img/bacon.jpg" height="35" width="35"></label>
                <label for="ham"><img src="img/ham.jpg" height="35" width="35"></label>
                    <%if meat == "none"%>
                
                    <%else%>
                        <%price += 0.35%>
                    <%end%>
            <%end%>
            <%veg.each do |value|%>
                <p><input type="checkbox" name="confirmed_veg[]" value="<%=value%>"><%=value%></p>
                <label for="onion"><img src="img/onions.jpg" height="35" width="35"></label>
                <label for="shroom"><img src="img/shrooms.jpg" height="35" width="35"></label>
                <label for="spin"><img src="img/spinach.jpg" height="35" width="35"></label>
                <label for="pep"><img src="img/peppers.jpg" height="35" width="35"></label>
                <label for="olive"><img src="img/olives.jpg" height="35" width="35"></label><br>
                    <%if veg == "none"%>
                    
                    <%else%>
                        <%price += 0.35%>
                    <%end%>
            <%end%> 

            <center><input type="submit" value="These parameters are acceptable. *beep boop*"></center>        
        </form>
    </div>

</html>